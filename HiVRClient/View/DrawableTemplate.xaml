                    <TranslateTransform
                        X="{Binding XLocation}"
                        Y="{Binding YLocation}" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </DataTemplate>
    <!--Benches 50x25.-->
    <DataTemplate
        DataType="{x:Type viewmodel:BenchControl}">
        <Path>
            <Path.Data>
                <RectangleGeometry
                    Rect="0,0,25,50" />
            </Path.Data>
            <Path.Style>
                <Style
                    TargetType="Path">
                    <Setter
                        Property="Fill"
                        Value="Orange" />
                </Style>
            </Path.Style>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform
                        ScaleX="{Binding XScale}"
                        ScaleY="{Binding YScale}" />
                    <TranslateTransform
                        X="{Binding XLocation}"
                        Y="{Binding YLocation}" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </DataTemplate>
    <!--Actors 50x50.-->
    <DataTemplate
        DataType="{x:Type viewmodel:ActorControl}">
        <Path>
            <Path.Data>
                <RectangleGeometry
                    Rect="0,0,50,50"
                    RadiusX="45"
                    RadiusY="45" />
            </Path.Data>
            <Path.Style>
                <Style
                    TargetType="Path">
                    <Setter
                        Property="Fill"
                        Value="Green" />
                </Style>
            </Path.Style>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform
                        ScaleX="{Binding XScale}"
                        ScaleY="{Binding YScale}" />
                    <TranslateTransform
                        X="{Binding DisplayedXLocation,UpdateSourceTrigger=PropertyChanged}"
                        Y="{Binding DisplayedYLocation,UpdateSourceTrigger=PropertyChanged}" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </DataTemplate>
</ResourceDictionary>