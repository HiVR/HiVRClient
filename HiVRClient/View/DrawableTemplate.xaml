        DataType="{x:Type viewmodel:TreeControl}">
        <Path>
            <Path.Data>
                <RectangleGeometry
                    Rect="0,0,200,200"
                    />
            </Path.Data>
            <Path.Style>
                <Style
                    TargetType="Path">
                    <Setter
