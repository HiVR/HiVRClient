<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodel="clr-namespace:HiVRClient.ViewModel">
    <!--Buildings 300x300.-->
    <DataTemplate
        DataType="{x:Type viewmodel:BuildingControl}">
        <Path>
            <Path.Data>
                <RectangleGeometry
                    Rect="0,0,300,300" />
            </Path.Data>
            <Path.Style>
                <Style
                    TargetType="Path">
                    <Setter
                        Property="Fill"
                        Value="Gray" />
                </Style>
            </Path.Style>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform
                        ScaleX="{Binding XScale}"
                        ScaleY="{Binding YScale}" />
                    <TranslateTransform
                        X="{Binding XLocation}"
                        Y="{Binding YLocation}" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </DataTemplate>
    <!--Cars 50 x 25-->
    <DataTemplate
        DataType="{x:Type viewmodel:CarControl}">
        <Path>
            <Path.Data>
                <RectangleGeometry
                    Rect="0,0,50,100"
                    RadiusX="10"
                    RadiusY="10" />   
            </Path.Data>
            <Path.Style>
                <Style
                    TargetType="Path">
                    <Setter
                        Property="Fill"
                        Value="Red" />
                </Style>
            </Path.Style>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform
                        ScaleX="{Binding XScale}"
                        ScaleY="{Binding YScale}" />
                    <TranslateTransform
                        X="{Binding XLocation}"
                        Y="{Binding YLocation}" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </DataTemplate>
    <!--Trees 100x100-->
